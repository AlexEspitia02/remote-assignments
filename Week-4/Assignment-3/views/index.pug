doctype html
html(lang="en")
    head
        if email
            title 您好#{email}
        else
            title 請輸入你的資料
    body
        if message
            form(action='/',method='post')
                label(for="email") 請輸入你的信箱
                input(type="email" id="email" name="email" required)
                br
                label(for="password") 請輸入你的密碼
                input(type="password" id="password" name="password" required)
                br
                br
                button(type="submit" name="action" value="register") 註冊
                button(type="submit" name="action" value="signIn") 登入
                p=message
        else if email
            form(action='/',method='post')
                h1 您好,#{email}
                p=signInMessage
                button(type="submit", name="action", value="logout") 登出
        else
            form(action='/',method='post')
                label(for="email") 請輸入你的信箱
                input(type="email" id="email" name="email" required)
                br
                label(for="password") 請輸入你的密碼
                input(type="password" id="password" name="password" required)
                br
                br
                button(type="submit" name="action" value="register") 註冊
                button(type="submit" name="action" value="signIn") 登入